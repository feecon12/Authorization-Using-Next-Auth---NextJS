{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/projects/page.js", "src/app/api/auth/[...nextauth]/route.jsx", "src/app/components/AuthProvider/AuthProvider.js", "src/app/components/Header.js", "src/app/components/Icons.js", "src/app/components/Login.js", "src/app/components/Signup.js", "src/app/components/Footer.js", "src/app/profiles/page.js", "src/app/about/page.js", "src/app/api/auth/[...nextauth]/route.js", "src/app/layout.js", "src/app/page.js", "src/app/pricing/page.js"],
  "exclude": ["node_modules"]
}
